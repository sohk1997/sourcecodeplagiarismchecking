                <table class="table table-striped table-bordered table-hover table-checkable" id="userDatatable">
                    <thead>
                            <th>No.</th>
                            <th> Username </th>
                            <th> Role </th>
                            <th> Status </th>
                            <th> Action </th>

                        </tr>
                    </thead>
                    <tbody>
                        @{int index = 0;}
                        @foreach (var user in ViewBag.Users as List<User>)
                        {
                            index++;
                            <tr class="odd gradeX" style="">
                                <td>@index</td>
                                <td>@user.UserName</td>
                                <td>@if(user.Role == "ADMIN")
                                    {
                                        <span class="label label-warning">ADMIN</span>
                                    }
                                    @if(user.Role == "USER")
                                    {
                                        <span class="label label-info">USER</span>
                                    }
                                </td>
                                <td>
                                    @if(user.IsBanned)
                                    {
                                        <span class="label label-sm label-default"> Ban </span>
                                    }
                                    @if(!user.IsBanned)
                                    {
                                        <span class="label label-sm label-success"> Active </span>
                                    }
                                </td>
                                <td>
                                    @if(user.Role != "ADMIN")
                                    {
                                        <a href="javascript:;" class="btn btn-danger  btn-xs" data-toggle="tooltip" data-placement="top"> <i class="fa fa-trash"></i></a>
                                    }
                            </td>
                            </tr>
                        }
                    </tbody>
                </table>


