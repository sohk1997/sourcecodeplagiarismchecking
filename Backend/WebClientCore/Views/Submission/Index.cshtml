@using WebClientCore.Infrastructures
@using WebClient.Models
@model List<DocumentInList>
@using WebClientCore.Models.DAOs
<div style="height:91px; background-color:#22195b"></div>


@{
    ViewBag.Title = "My Submission";
}
<style>

    .dataTables_paginate {
        display: inline-block !important;
    }

        .dataTables_paginate .pagination a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
        }

        .dataTables_paginate .pagination .active > a, .pagination .active > a:hover {
            background: #412fb3 !important;
            color: white;
        }

        .dataTables_paginate .pagination a:hover:not(.active) {
            background-color: #ddd;
        }
</style>
<div class="row" style="margin:10px;">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase"> Submission Table</span>
                </div>

            </div>
            <div class="portlet-body">

                <table class="table table-striped table-bordered table-hover table-checkable" id="submissionDatatable">

                    <thead>
                        <tr>
                            <th> Id </th>
                            <th> File name </th>
                            <th>Upload Date</th>
                            <th> Status </th>
                        </tr>
                    </thead>
                    <tbody>
                       

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section Scripts{
    <script type"text/javascript">
        var API_URL = '@RequestHelper.API_URL';
    </script>
    <script src="@Url.Assets("apps/scripts/submissionJS.js")" type="text/javascript"></script>   
    
}



