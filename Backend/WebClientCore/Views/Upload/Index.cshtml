<div style="padding:20px;">
    <h3 class="page-title">
        File Upload

    </h3>
    <div class="dropdown" style="float:right;" id="languageDropdown">
        <button class="btn btn-default dropdown-toggle" type="button" id="menu1" data-toggle="dropdown">
            Language
            <i class="fas fa-chevron-down"></i>
        </button>
        <ul class="dropdown-menu dropdown-menu-right" role="menu" aria-labelledby="menu1">
            <li role="presentation"><a role="menuitem" href="#">Java</a></li>
            <li role="presentation"><a role="menuitem" href="#">C#</a></li>
            <li role="presentation"><a role="menuitem" href="#">Python</a></li>

        </ul>
    </div>

    <form id="submitForm" style="margin-top:25px">
        <div class="form-group files">
            <label>Upload Your File </label>
            <input type="file" class="form-control center-align" multiple="" id="input-file" name="file">
        </div>

        <textarea id="code_editor1" class=""></textarea>

        <div class="row">
            <div class="col-md-11"></div>
            <div class="col-md-1" style="margin-top:5px">
                <button class="btn green-sharp btn-outline sbold pull-right" type="submit" data-toggle="modal" href="#basic" style="display:block"> Next </button>

            </div>

        </div>

    </form>
</div>

<div class="modal fade" id="basic" tabindex="-1" role="basic" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header " style="display:block">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Modal Title</h4>
            </div>
            <div class="modal-body">

                <form role="form">
                    <div class="form-group form-md-checkboxes">

                        <div class="md-checkbox-list">
                            <div class="md-checkbox">
                                <input type="checkbox" id="checkbox2" class="md-check" checked>
                                <label for="checkbox2">
                                    <span></span>
                                    <span class="check"></span>
                                    <span class="box"></span> Web Check
                                </label>
                            </div>
                            <div class="md-checkbox">
                                <input type="checkbox" id="checkbox1" class="md-check">
                                <label for="checkbox1">
                                    <span></span>
                                    <span class="check"></span>
                                    <span class="box"></span> Peer to Peer Check
                                </label>
                            </div>


                        </div>
                    </div>

                </form>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn dark btn-outline" data-dismiss="modal">Close</button>


                <button onclick="upload()" class="btn green">Check</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
@section Scripts{
    <script src="@Url.Assets("js/demoJS.js")" type="text/javascript"></script>
    <script type="text/javascript">$("#submitForm").submit(function (e) {
            e.preventDefault();
        });
        function upload() {
            var form = document.getElementById("submitForm");
            var formData = new FormData(form);
            fetch('http://35.240.150.92/api/document', {
                method: 'POST',
                body: formData
            }).then(function (re) {
                window.location.replace("/Submission");
            })
        }</script>

}
