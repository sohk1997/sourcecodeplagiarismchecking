@model List<SubmissionModel>
<div style="height:91px; background-color:#22195b"></div>


@{
    ViewBag.Title = "My Submission";
}
<style>

    .dataTables_paginate {
        display: inline-block !important;
    }

        .dataTables_paginate .pagination a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
        }

        .dataTables_paginate .pagination .active > a, .pagination .active > a:hover {
            background: #412fb3 !important;
            color: white;
        }

        .dataTables_paginate .pagination a:hover:not(.active) {
            background-color: #ddd;
        }
</style>
<div class="row" style="margin:10px;">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase"> Submission Table</span>
                </div>

            </div>
            <div class="portlet-body">

                <table class="table table-striped table-bordered table-hover table-checkable order-column" id="submissionDatatable">

                    <thead>
                        <tr>
                            <th>
                                <input type="checkbox" class="group-checkable" data-set="#submissionDatatable .checkboxes" />
                            </th>
                            <th> Count </th>
                            <th> Email </th>
                            <th> Status </th>
                            <th> Action </th>

                        </tr>
                    </thead>
                    <tbody>
                        @{int index = 1;}
                        @foreach (var item in (ViewBag.Submissions as List<SubmissionModel>))
                        {
                            <tr class="odd gradeX" style="">
                                <td>
                                    <input type="checkbox" class="checkboxes" value="1" />
                                </td>
                                <td>
                                    @index
                                </td>
                                <td> <a href="@item.Id"> @item.Name </a></td>
                                <td id="stt">
                                    <span class="label label-sm stt"> @item.Status </span>
                                </td>
                                <td>
                                    <a href="javascript:;" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="top"> <i class="fa fa-search"></i></a>
                                </td>
                            </tr>
                            index++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>

</div>

@section Scripts{
    <script src="@Url.Assets("apps/scripts/submissionJS.js")" type="text/javascript"></script>
    <script>


        $('.stt:contains(Done)').addClass('label-success');
        $('.stt:contains(Cancel)').addClass('label-default');
        $('.stt:contains(Spending)').addClass('label-warning');



    </script>
}



