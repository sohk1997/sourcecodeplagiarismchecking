<div class="row">
    <div class="col-md-11"></div>
    <div class="col-md-1" style="margin-top:5px">
        <a class="btn green-sharp btn-outline sbold pull-right" data-toggle="modal" href="#basic" style="display:block"> Next </a>

    </div>

</div>

<div class="modal fade" id="basic" tabindex="-1" role="basic" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Modal Title</h4>
            </div>
            <div class="modal-body">

                <form role="form">
                    <div class="form-group form-md-checkboxes">

                        <div class="md-checkbox-list">
                            <div class="md-checkbox">
                                <input type="checkbox" id="checkbox1" class="md-check">
                                <label for="checkbox1">
                                    <span></span>
                                    <span class="check"></span>
                                    <span class="box"></span> Peer to Peer Check
                                </label>
                            </div>
                            <div class="md-checkbox">
                                <input type="checkbox" id="checkbox2" class="md-check" checked>
                                <label for="checkbox2">
                                    <span></span>
                                    <span class="check"></span>
                                    <span class="box"></span> Web Check
                                </label>
                            </div>

                        </div>
                    </div>

                </form>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn dark btn-outline" data-dismiss="modal">Close</button>
                @*<button type="button" class="btn green"></button>*@
                @*<link href="@{Html.RenderPartial("CompareCode")}" rel="stylesheet"  />*@


                <a href="@Url.Action("CompareCode","Demo")" class="btn green">Check</a>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
