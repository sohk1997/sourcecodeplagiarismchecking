                <table class="table table-striped table-bordered table-hover table-checkable order-column" id="userDatatable">
                    <thead>
                        <tr>
                            <th>
                                <input type="checkbox" class="group-checkable" data-set="#userDatatable .checkboxes" />
                            </th>
                            <th> Avatar </th>
                            <th> Username </th>
                            <th> Email </th>
                            <th> Birthday </th>
                            <th> Country </th>
                            <th> Active </th>
                            <th> Action </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in (ViewBag.Users as List<UserRecordModel>))
                        {
                            <tr class="odd gradeX" style="">
                                <td>
                                    <input type="checkbox" class="checkboxes" value="1" />
                                </td>
                                <td>
                                    <img class="img-circle center" src="@Url.Assets(item.ProfilePicture)" />
                                </td>
                                <td> @item.FullName</td>
                                <td>
                                    <a href="mailto:@item.EmailAddress"> @item.EmailAddress </a>
                                </td>
                                <td> @item.DayOfBirth.ToString("MM/dd/yyyy") </td>
                                <td> @item.CountryISO3</td>
                                <td>
                                    <input type="checkbox" checked="@item.isActive" id="@item.Id" class="make-switch " data-size="small">

                                </td>
                                <td>
                                    <a href="javascript:;" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="top"> <i class="fa fa-search"></i></a>
                                </td>
                            </tr>
